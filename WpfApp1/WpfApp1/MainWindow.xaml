<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JAKA Cobot Controller"
        Height="550" Width="620"
        Background="#1E1E1E"
        FontFamily="Segoe UI" FontSize="14">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================= -->
        <!-- 🔌 Kết nối robot -->
        <!-- ============================= -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Robot IP:" VerticalAlignment="Center" Foreground="White" FontSize="16"/>
            <TextBox x:Name="txtIp" Width="160" Margin="10,0,10,0" Text="192.168.31.61"/>
            <Button x:Name="btnConnect" Content="🔌 Kết nối" Width="100" Click="btnConnect_Click"/>
            <TextBlock x:Name="lblStatus" Text="Chưa kết nối" Foreground="Orange" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ============================= -->
        <!-- ⚙️ Điều khiển chính -->
        <!-- ============================= -->
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">

            <!-- Nhóm Power / Enable -->
            <WrapPanel Margin="0,0,0,10">
                <Button x:Name="btnPowerOn" Content="⚡ Power ON" Width="120" Margin="5" Click="btnPowerOn_Click"/>
                <Button x:Name="btnPowerOff" Content="⛔ Power OFF" Width="120" Margin="5" Click="btnPowerOff_Click"/>
                <Button x:Name="btnEnable" Content="✅ Enable" Width="120" Margin="5" Click="btnEnable_Click"/>
                <Button x:Name="btnDisable" Content="🛑 Disable" Width="120" Margin="5" Click="btnDisable_Click"/>
            </WrapPanel>

            <!-- ============================= -->
            <!-- 🎯 Điều khiển khớp -->
            <!-- ============================= -->
            <GroupBox Header="Joint Move (°)" Foreground="White" Margin="0,10,0,0">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J1:" Width="60" Foreground="White"/>
                        <TextBox x:Name="txtJ1" Width="80" Text="0"/>
                        <TextBlock Text="J2:" Width="60" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtJ2" Width="80" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J3:" Width="60" Foreground="White"/>
                        <TextBox x:Name="txtJ3" Width="80" Text="0"/>
                        <TextBlock Text="J4:" Width="60" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtJ4" Width="80" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J5:" Width="60" Foreground="White"/>
                        <TextBox x:Name="txtJ5" Width="80" Text="0"/>
                        <TextBlock Text="J6:" Width="60" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtJ6" Width="80" Text="0"/>
                    </StackPanel>
                    <Button x:Name="btnMove" Content="🤖 Di chuyển" Width="150" Margin="0,10,0,0" Click="btnMove_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- ============================= -->
            <!-- 📡 Trạng thái hiện tại -->
            <!-- ============================= -->
            <GroupBox Header="Trạng thái hiện tại (°)" Foreground="White" Margin="0,10,0,0">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J1:" Width="40" Foreground="White"/>
                        <TextBox x:Name="txtCurJ1" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                        <TextBlock Text="J2:" Width="40" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtCurJ2" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J3:" Width="40" Foreground="White"/>
                        <TextBox x:Name="txtCurJ3" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                        <TextBlock Text="J4:" Width="40" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtCurJ4" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="J5:" Width="40" Foreground="White"/>
                        <TextBox x:Name="txtCurJ5" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                        <TextBlock Text="J6:" Width="40" Foreground="White" Margin="20,0,0,0"/>
                        <TextBox x:Name="txtCurJ6" Width="80" IsReadOnly="True" Background="#333" Foreground="LightGreen" Text="0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
